{
  "key": "hello_pipeline",
  "steps": [
    {
      "key": "start_log",
      "action": "ryvus/log",
      "params": {
        "message": "Hello"
      },
      "next_when": [
        {
          "when": "$.output.message == 'Hello'",
          "next": "end_log"
        }
      ]
    },
    {
      "config": {
        "user": "$USER",
        "password": "secret:$.steps[?(@.key == 'start_log')].output.message"
      },
      "key": "end_log",
      "action": "ryvus/log",
      "params": {
        "message": "Goodbye"
      }
    }
  ]
}
